{
	"manifest_version": 2,

	"name": "Protractor-Test-Generator",
	"description": "Record your clicks and inputs and replay them.",
	"version": "1.0",
	"background" : {
		"scripts": ["background.js"],
		"persistent" : true
	},
	"icons": { "16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png" },
	"browser_action": {
		"default_icon": "images/icon.png",
		"default_title" : "Protractor-Test-Generator"
	},
	"permissions": [
		"activeTab",
		"contentSettings",
		"https://ajax.googleapis.com/",
		"downloads",
		"webRequest",
		"contextMenus"
	],
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"run_at": "document_start"
	}]
}
